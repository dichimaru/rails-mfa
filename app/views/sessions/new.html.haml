
= form_with url: login_path, method: :post, class: "form-signin"  do
  %h1.h3.mb-3.font-weight-normal Please sign in
  = label_tag :email,'メールアドレス', class: 'sr-only'
  = text_field_tag :email,'', class: 'form-control', placeholder: "Email address", required: true
  = label_tag :password, 'パスワード', class: 'sr-only'
  = password_field_tag :password, '', class: 'form-control', placeholder: "Password", required: true
  = submit_tag "ログイン", class: 'btn btn-lg btn-primary btn-block'
  .user-create-buttons
    = link_to "会員登録", new_user_path, class: 'btn btn-sm btn-info'